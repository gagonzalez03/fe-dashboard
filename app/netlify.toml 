[build]
command = "npm run build"
functions = "netlify/functions"
publish = ".next"

[build.environment]
NODEJS_VERSION = "18"
NPM_VERSION = "9"
NODE_ENV = "production"

# Redirect all API calls to Next.js API routes
[[redirects]]
from = "/api/*"
to = "/.netlify/functions/:splat"
status = 200

# SPA routing - redirect non-file requests to index
[[redirects]]
from = "/*"
to = "/index.html"
status = 200

# Security headers
[[headers]]
for = "/*"
[headers.values]
X-Frame-Options = "SAMEORIGIN"
X-Content-Type-Options = "nosniff"
X-XSS-Protection = "1; mode=block"
Referrer-Policy = "strict-origin-when-cross-origin"

# Cache policies for static assets
[[headers]]
for = "/_next/static/*"
[headers.values]
Cache-Control = "public, max-age=31536000, immutable"

[[headers]]
for = "/static/*"
[headers.values]
Cache-Control = "public, max-age=31536000, immutable"
